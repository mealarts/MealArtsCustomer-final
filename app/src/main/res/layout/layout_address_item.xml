<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp">

        <ImageView
            android:id="@+id/ivAddressType"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:src="@drawable/home_add"
            android:tint="@color/colorDarkGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <com.mealarts.Helpers.CustomWidget.CustomTextView_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAddressType"
                android:hint="Type"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"/>

            <com.mealarts.Helpers.CustomWidget.CustomTextView_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvFullAddress"
                android:hint="Full Address"
                android:textColor="@color/colorDarkGray"
                android:textSize="12sp"
                android:padding="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:gravity="end">

        <ImageView
            android:id="@+id/ivEditAddress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:src="@drawable/address_edit"
            android:tint="@color/colorDarkGray"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/ivDeleteAddress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/address_remove"
            android:tint="@color/colorDarkGray"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"/>

</LinearLayout>