<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:src="@drawable/hiw_location" />

        <com.mealarts.Helpers.CustomWidget.CustomTextView_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, "
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

        <com.mealarts.Helpers.CustomWidget.CustomTextView_SemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Choose your delivery area"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" />

        <com.mealarts.Helpers.CustomWidget.CustomTextView_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:visibility="invisible"
            android:text="Lorem Ipsum is simply dummy text of the printing and type setting industry.Lorem Ipsum has been the industry's standard dummy text ever"
            android:textAlignment="center"
            android:textColor="@color/colorDarkGray"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>